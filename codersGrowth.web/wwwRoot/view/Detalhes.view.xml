<mvc:View
	controllerName="sap.ui.demo.academia.controller.Detalhes" 
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	displayBlock="true"
	height="100%"
	busyIndicatorDelay="0">
    <Shell>
        <Page title="{path: 'alunos>/nome'}" showNavButton="true" navButtonPress=".onNavBack"  binding="{path: 'alunos>/'}">
			<Toolbar>
				<ToolbarSpacer/>
				<Button text="editar"
						icon="sap-icon://edit"/>
				<Button text="excluir"
						icon="sap-icon://delete"/>
			</Toolbar>
			<ObjectAttribute text="Altura: {alunos>altura}"/>
			<ObjectAttribute text="Sexo: {alunos>sexo}"/>
			<ObjectAttribute text="Cpf: {alunos>cpf}"/>
			<ObjectAttribute text="Data de nascimento: {
							path: 'alunos>dat',
							type: 'sap.ui.model.type.Date',
							formatOptions: {style : 'full', 
							source: {pattern: 'yyyy-MM-ddTHH:mm:ss.mmm'}}}"/>
        </Page>
	</Shell>
</mvc:View>