<mvc:View
	height="100%"
	controllerName="sap.ui.demo.academia.controller.Cadastro"
	xmlns:mvc="sap.ui.core.mvc"
    xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns="sap.m">
	<Page title="DETALHES" showNavButton="true" navButtonPress="aoClicarEmVoltar">
			<Toolbar>
				<ToolbarSpacer/>
				<Button text="editar" icon="sap-icon://edit"/>
				<Button text="excluir" icon="sap-icon://delete"/>
			</Toolbar>
			<VBox class="sapUiSmallMargin">
				<f:Form editable="false">
					<f:title>
						<core:Title text="{alunos>/nome}" />
					</f:title>
					<f:layout>
						<f:ResponsiveGridLayout
							labelSpanXL="3"
							labelSpanL="3"
							labelSpanM="3"
							labelSpanS="12"
							adjustLabelSpan="false"
							emptySpanXL="4"
							emptySpanL="4"
							emptySpanM="4"
							emptySpanS="0"
							columnsXL="1"
							columnsL="1"
							columnsM="1"
							singleContainerFullSize="false" />
					</f:layout>
					<f:formContainers>
						<f:FormContainer>
							<f:formElements>
								<f:FormElement label="Altura">
									<f:fields>
										<Text text="{alunos>/altura}" id="nameText"  />
									</f:fields>
								</f:FormElement>
								<f:FormElement label="Sexo">
									<f:fields>
										<Text text="{alunos>/sexo}" />
									</f:fields>
								</f:FormElement>
								<f:FormElement label="CPF">
									<f:fields>
										<Text text="{path: 'alunos>/cpf',
													formatter: '.formatter.formataCPF'}" />
									</f:fields>
								</f:FormElement>
								<f:FormElement label="Data de nascimento">
									<f:fields>
										<Text text="{
											path: 'alunos>/dat',
											type: 'sap.ui.model.type.Date',
											formatOptions: {style : 'full', 
											source: {pattern: 'yyyy-MM-ddTHH:mm:ss.mmm'}}}" />
									</f:fields>
								</f:FormElement>
							</f:formElements>
						</f:FormContainer>
					</f:formContainers>
				</f:Form>
			</VBox>
        </Page>
</mvc:View>